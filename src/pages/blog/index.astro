---
import { getCollection } from "astro:content"

import List from "@components/ux/List.astro"
import MainLayout from "@layouts/MainLayout.astro"

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.created.valueOf() - a.data.created.valueOf(),
)
---

<MainLayout
  title="Blog"
  description="Welcome to my personal blog, a place where I talk about technology and any other topics which interest me."
>
  <h1 class="text-center py-4">Blog</h1>
  <List listItems={posts} slugPrefix="blog" />
</MainLayout>
