<script is:inline>
  function isDarkTheme() {
    return (
      localStorage.theme === "dark" ||
      (!("theme" in localStorage) &&
        window.matchMedia("(prefers-color-scheme: dark)").matches)
    )
  }

  function toggleTheme(theme) {
    if (theme === "dark") {
      localStorage.setItem("theme", "dark")
      document.documentElement.classList.add("dark")
    } else {
      localStorage.setItem("theme", "light")
      if (document.documentElement.classList.contains("dark")) {
        document.documentElement.classList.remove("dark")
      }
    }
  }

  document.addEventListener(
    "DOMContentLoaded",
    () => {
      const lightSwitch = document.getElementById("switch")
      const lampShadow = document.getElementById("lamp-shadow")
      let isLightOn = isDarkTheme()

      function setLightAndTheme() {
        if (isLightOn) {
          console.log("Light on ðŸ’¡")
          toggleTheme("dark")
          lightSwitch.style.rotate = "-14deg"
          lampShadow.style.display = "block"
          isLightOn = false
        } else {
          console.log("Light off ðŸŒš")
          toggleTheme("light")
          lightSwitch.style.rotate = "14deg"
          lampShadow.style.display = "none"
          isLightOn = true
        }
      }

      setLightAndTheme()

      lightSwitch.addEventListener("click", () => {
        setLightAndTheme()
      })
    },
    { once: true },
  )
</script>

